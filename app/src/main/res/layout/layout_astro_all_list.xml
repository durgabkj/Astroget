<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C6F3E7E3"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvAstrologer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="80dp"
                        app:cardElevation="0dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civAstroImageList"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/images"
                            android:elevation="10dp"
                            app:civ_border_color="@color/secondaryColor"
                            app:civ_border_width="5dp" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAstrologerNameList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:text="Rahul khana"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTodayMatchVs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:maxLines="1"
                        android:text="vedic Astrology,Prakashna kundali"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tvTodayMatchDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="English,Hindi,Tamil"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/rbAvgRating"
                            style="@android:style/Widget.Material.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvRatindPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:maxLines="1"
                            android:text="3.5"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvTotalRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:maxLines="1"
                            android:text="(2,230 Reviews)"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mbtnChat"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/dark_orange"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:text="Chat"
                            app:cornerRadius="50dp"
                            android:textStyle="normal"

                            />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mbtnCall"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:backgroundTint="@color/dark_orange"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:text="Call"
                            app:cornerRadius="50dp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvAstrovastu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5 year Experience"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/exp"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/black"
                    android:elevation="1dp" />



                <View
                    android:layout_width="1dp"
                    android:background="@color/gray"
                    android:layout_height="match_parent"/>


                <TextView
                    android:id="@+id/tvAstroVastuBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="599/- only per mint"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:drawableStart="@drawable/rupee"
                    android:textSize="13sp"
                    android:drawablePadding="5dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/dark_orange"
                    android:elevation="1dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>