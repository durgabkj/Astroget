<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:background="@drawable/box1_border_layout"
        android:layout_width="200dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="80dp"
            app:cardElevation="8dp">


            <ImageView
                android:id="@+id/ivAstrologer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:elevation="8dp"
                android:src="@drawable/images"
                android:scaleType="fitXY" />

        </com.google.android.material.card.MaterialCardView>
        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvAstroName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Astro Arpita"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/login_font"
                android:textColor="@android:color/holo_blue_dark"
                android:elevation="1dp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvAstroType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarot ,"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/gray"
                    android:elevation="1dp" />



                <TextView
                    android:id="@+id/tvAstroType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reiki He"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/gray"
                    android:elevation="1dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/outline_call_24"
                android:fontFamily="@font/login_font"
                android:textColor="@color/green"
                android:elevation="1dp" />

        </LinearLayout>









    </LinearLayout>



</LinearLayout>