<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:background="@drawable/border_whitebg"
        android:layout_width="150dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civAstroVastu"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/images"
                android:elevation="10dp"
                app:civ_border_color="@color/secondaryColor"
                app:civ_border_width="5dp" />

        </com.google.android.material.card.MaterialCardView>
        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvAstroNameVastu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Astro Arpita"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/login_font"
                android:textColor="@color/black"
                android:elevation="1dp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvAstroType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarot ,"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/gray"
                    android:elevation="1dp" />



                <TextView
                    android:id="@+id/tvAstroType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reiki He"
                    android:layout_gravity="start"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/gray"
                    android:elevation="1dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vastu,Tarot,Numerology"
                android:textSize="11sp"
                android:textStyle="normal"
                android:fontFamily="@font/login_font"
                android:textColor="@color/gray"
                android:elevation="1dp" />

        </LinearLayout>









    </LinearLayout>



</LinearLayout>

